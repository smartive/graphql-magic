{
  "extends": "./tsconfig.json",
  "include": ["**/*.ts", "**/*.tsx", "**/unit/**/*.spec.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "rootDir": "./",
    "types": ["jest"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true
  }
}
