{
  "include": ["**/*.ts", "**/*.tsx", "**/unit/**/*.spec.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": "./",
    "sourceMap": true,
    "declaration": true,
    "target": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  }
}
